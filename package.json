{
  "name": "app-server",
  "version": "0.0.0",
  "description": "Template for web app based on Angular and Nest. This is the back-end.",
  "author": "Giuliano Marinelli",
  "license": "MIT",
  "scripts": {
    "start:dev": "nest start",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/server": "^4.x",
    "@casl/ability": "^6.x",
    "@nestjs!/graphql-filter": "^1.x",
    "@nestjs/apollo": "^13.x",
    "@nestjs/common": "^11.x",
    "@nestjs/config": "^4.x",
    "@nestjs/core": "^11.x",
    "@nestjs/graphql": "^13.x",
    "@nestjs/jwt": "^11.x",
    "@nestjs/mapped-types": "^2.x",
    "@nestjs/platform-express": "^11.x",
    "@nestjs/serve-static": "^5.x",
    "@nestjs/throttler": "^6.x",
    "@nestjs/typeorm": "^11.x",
    "bcryptjs": "^3.x",
    "class-transformer": "^0.x",
    "class-validator": "^0.x",
    "device-detector-js": "^3.x",
    "graphql": "^16.x",
    "graphql-scalars": "^1.x",
    "graphql-upload-ts": "^2.x",
    "mongodb": "^6.x",
    "mysql2": "^3.x",
    "pg": "^8.x",
    "poly-crypto": "^2.x",
    "reflect-metadata": "^0.x",
    "rxjs": "^7.x",
    "typeorm": "^0.x",
    "uuid": "^11.x",
    "uuid-validate": "^0.x"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.x",
    "@nestjs/schematics": "^11.x",
    "@nestjs/testing": "^11.x",
    "@trivago/prettier-plugin-sort-imports": "^5.x",
    "@types/express": "^5.x",
    "@types/jest": "^30.x",
    "@types/node": "^24.x",
    "@types/supertest": "^6.x",
    "@typescript-eslint/eslint-plugin": "^8.x",
    "@typescript-eslint/parser": "^8.x",
    "eslint": "^9.x",
    "eslint-config-prettier": "^10.x",
    "eslint-plugin-prettier": "^5.x",
    "jest": "^30.x",
    "prettier": "^3.x",
    "prettier-eslint": "^16.x",
    "prettier-plugin-multiline-arrays": "^4.x",
    "source-map-support": "^0.x",
    "supertest": "^7.x",
    "ts-jest": "^29.x",
    "ts-loader": "^9.x",
    "ts-node": "^10.x",
    "tsconfig-paths": "^4.x",
    "typescript": "^5.x",
    "typescript-eslint": "^8.x"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
